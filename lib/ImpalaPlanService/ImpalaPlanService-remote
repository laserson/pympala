  pp.pprint(client.UpdateMetastore(eval(args[0]),))

elif cmd == 'ShutdownServer':
  if len(args) != 0:
    print 'ShutdownServer requires 0 args'
    sys.exit(1)
  pp.pprint(client.ShutdownServer())

else:
  print 'Unrecognized method %s' % cmd
